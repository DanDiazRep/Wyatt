<!doctype html>
<html>
<head>

    <style>
    </style>

</head>

<body>
    <div class="invoice-container">
        <div class="head">
            <img src="http://wyattapi.servexusinc.com/wwwroot/logo.png" class="logo-image" />
        </div>
        <div class="info">
            <table class="main">
                <tr>
                    <td class="image">
                        <img class="productImg" src="{print}" />
                    </td>
                    <td class="content">
                        <table>
                            <tr class="titleName">
                                <td id="namerow">{name}</td>
                            </tr>
                            <tr class="titleName">
                                <td id="namerow">__</td>
                            </tr>
                        </table>
                        <table>
                            <tr class="underline">
                                <td class="col-50">List Price:</td>
                                <td class="col-50">$ {TotalPrice}.00</td>
                            </tr>
                            <tr class="underline">
                                <td>SKU:</td>
                                <td>{code}</td>
                            </tr>
                        </table>
                        <table>
                            <tr class="underline"><td class="col-50">BACK:</td><td class="col-50">{back}</td></tr>
                            <tr class="underline"><td>BASE:</td><td>{base}</td></tr>
                            <tr class="underline"><td>MECHANISM:</td><td>{mechanism}</td></tr>
                            <tr class="underline"><td>ARMS:</td><td>{arm}</td></tr>
                            <tr><td>FABRIC:</td><td>{grade}</td></tr>
                            <tr class="underline"><td class="col-50">PATTERN:</td><td class="col-50">{fabric}</td></tr>
                        </table>                        
                    </td>
                </tr>
            </table>
        </div>
        <div id="footerRow">
            <table id="footerTable">
                <tr>
                    <td id="leftcol">{date}</td>
                    <td id="rightcol" align="right">wyattseating.com</td>
                </tr>

            </table>
        </div>

    </div>

        
</body>
</html>